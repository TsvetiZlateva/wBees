@{
}

<section class="job-postings">
    <h1>Recently added job postings</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Posted on</th>
                <th scope="col">Position</th>
                <th scope="col">Employer</th>
                <th scope="col">Type</th>
                <th scope="col">Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in @Model)
            {
                <tr>
                    <th scope="row">@job.PublishedOn</th>
                    <td>@job.Position</td>
                    <td>@job.Employer</td>
                    <td>@job.EmploymentType</td>
                    <td><a class="job-info" asp-controller="Jobs" asp-action="JobsInfo" asp-route-id="@job.Id">More info</a></td>
                    @*<td><button onclick="location.href='@Url.Action($"JobsInfo", "Jobs")?id=@job.Id'" class="job-info">More info</button></td>*@
                </tr>
            }
        </tbody>
    </table>

    <button class="search-button">See all</button>
</section>
