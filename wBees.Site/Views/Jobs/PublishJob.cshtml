                <section>
            <article>
                <h4>Industry</h4>
            </article>

            <article>

                <div id="accordion">
                    @foreach (var industry in Model.Industries)
                    {
                        <div class="card">
                            <div class="card-header" id=@Model.Industries.IndexOf(industry)>
                                <h5 class="mb-0">
                                    <a class="btn btn-link" data-toggle="collapse"
                                            data-target="#collapseOne" aria-expanded="true"
                                            aria-controls="collapseOne">
                                        @industry.Name
                                    </a>
                                </h5>
                            </div>
                            <div id="collapseOne" class="collapse show" aria-labelledby=@Model.Industries.IndexOf(industry)>
                                <div class="card-body accordion-fit">
                                    @for (int j = 0; j < @industry.SubIndustries.Count(); j++)
                                    {
                                        <div class="custom-control custom-checkbox mb-3 ">
                                            <input type="checkbox" class="custom-control-input" id=@j value=@industry.SubIndustries[j].Id>
                                            <label class="custom-control-label" for=@j>@industry.SubIndustries[j].Name</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </article>
        </section>
                @*<partial name="~/Views/Shared/_IndustriesPartial.cshtml" />*@
            </div>

            <div class="publish-job-container">
                <h4><label asp-for="@Model.Job.Keywords"></label></h4>(comma separated)
                <input asp-for="@Model.Job.Keywords">
            </div>

            <div class="publish-job-container">
                <h4><label asp-for="@Model.Job.EmploymentType"></label></h4>
                <select asp-for="@Model.Job.EmploymentType">
                    <option value="Remote"> </option>
                    <option value="First">First</option>
                    <option value="Second">Second</option>
                    <option value="Third">Third</option>
                </select>
            </div>

            <div class="publish-job-container">
                <h4><label asp-for="@Model.Job.SeniorityLevel"></label></h4>
                <select asp-for="@Model.Job.SeniorityLevel">
                    <option value="Senior"> </option>
                    <option value="First">First</option>
                    <option value="Second">Second</option>
                    <option value="Third">Third</option>
                </select>
            </div>

            <div class="publish-job-container">
                <button type="submit" class="button btn-publish"><i class="fas fa-upload"></i>Publish</button>
            </div>
        </form>
    </article>

</section>

